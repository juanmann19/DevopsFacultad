@model Proyecto_Facultad.Models.Leccion

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h2 class="text-primary">Editar Lecci√≥n</h2>
    <form id="leccionForm" asp-action="Edit" method="post">
        <div class="form-group">
            <label asp-for="Descripcion" class="control-label"></label>
            <input asp-for="Descripcion" class="form-control" />
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
        <div class="form-group" style="padding-bottom: 1%;">
            <label asp-for="IdLibro" class="control-label"></label>
            <select asp-for="IdLibro" class="form-select" asp-items="ViewBag.IdLibro"></select>
            <span asp-validation-for="IdLibro" class="text-danger"></span>
        </div>
        <div class="form-group d-flex" style="width: 40%;">
            <button type="submit" class="btn btn-primary flex-fill me-2">Guardar</button>
            <a asp-action="Index" class="btn btn-danger flex-fill">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
