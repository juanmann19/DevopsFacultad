@model Proyecto_Facultad.Models.Capacitacion

<div class="container">
    <h2 class="text-primary">Añadir capacitación</h2>

    <form id="sedeForm" asp-action="Create" method="post">
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="FechaCapacitacion" class="form-label"></label>
                <input id="FechaCapacitacion" asp-for="FechaCapacitacion" class="form-control" type="date" />
                <span id="FechaCapacitacionError" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="IdStaff" class="form-label"></label>
                <select asp-for="IdStaff" class="form-control" asp-items="ViewBag.IdStaff">
                </select>
            </div>
        </div>
        <div class="form-group d-flex">
            <button type="submit" class="btn btn-primary flex-fill me-2">Guardar</button>
            <a asp-action="Index" class="btn btn-danger flex-fill">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelector('form').addEventListener('submit', function (event)
    </script>
}