<div class="container-fluid pt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
    <div class="row mb-3">
        <div class="col-6">
            <h2 class="text-primary">Listado de Niveles de la Facultad</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Nivels" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Agregar nivel de facultad
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>

                    <!-- Trae solo los campos necesarios, no todos-->
                    <th>Nombre nivel</th>
                  
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.NombreNivel))
                {
                    <tr>
                        <td>@obj.NombreNivel</td>
                   
                        <td>
                            <div class="btn-group w-100" role="group">
                                <a asp-controller="Nivels" asp-action="Edit" asp-route-id="@obj.NombreNivel" class="btn btn-primary flex-grow-1">
                                    <i class="bi bi-pencil-fill"></i> Editar
                                </a>
                                
                                <form asp-action="Deactivate" method="post" class="flex-grow-1">
                                    <button type="submit" asp-controller="Nivels" asp-action="Deactivate" asp-route-id="@obj.NombreNivel" class="btn btn-danger w-100">
                                        <i class="bi bi-trash-fill"></i> Activar/Desactivar
                                    </button> 
                                </form>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

