@model IEnumerable<Proyecto_Facultad.Models.Nivel>

<div class="container-fluid pt-4">
    @if (TempData["SuccessMessage"] != null)

    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)

    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="row mb-3">
        <div class="col-6">
            <h2 class="text-primary">Listado de Niveles</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Nivels" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Agregar Nivel
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Nombre del Nivel</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderBy(n => n.NombreNivel))

                {
                    <tr>
                        <td>@item.NombreNivel</td>
                        <td>
                            <div class="btn-group w-100" role="group">
                                <a asp-controller="Nivels" asp-action="Edit" asp-route-id="@item.IdNivel" class="btn btn-primary flex-grow-1">
                                    <i class="bi bi-pencil-fill"></i> Editar
                                </a>
                                <a asp-controller="Nivels" asp-action="Delete" asp-route-id="@item.IdNivel" class="btn btn-danger flex-grow-1">
                                    <i class="bi bi-trash-fill"></i> Eliminar
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

