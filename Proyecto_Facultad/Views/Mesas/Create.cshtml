@model Proyecto_Facultad.Models.Mesa

<div class="container">
    <h2 class="text-primary">Añadir Mesa</h2>

    <form asp-action="Create" method="post">
       <div class="row mb-3">
             <div class="col-md-6">
                <label asp-for="IdSede" class="form-label"></label>
                <select asp-for="IdSede" class="form-control" asp-items="ViewBag.NombreSede"></select>
                </div>
            </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="IdJornada" class="form-label"></label>
                <select asp-for="IdJornada" class="form-control" asp-items="ViewBag.DiaSemana"></select>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" class="form-control" type="date" />
                <span asp-validation-for="FechaInicio" class="Text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-mb-6">
               <label asp-for="FechaFin" class="control-label"></label>
                <input asp-for="FechaFin" class="form-control" type="date" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
             </div>
        </div>

        <div class="form-group d-flex">
            <button type="submit" class="btn btn-primary flex-fill me-2">Guardar</button>
            <a asp-action="Index" class="btn btn-danger flex-fill">Cancelar</a>
        </div>
    </form>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label class="form-label">Activo</label>
                <div class="form-check">
                    <input type="checkbox" asp-for="EstadoMesa" class="form-check-input" />
                    <label class="form-check-label">Sí</label>
                </div>
                <span asp-validation-for="EstadoMesa" class="text-danger"></span>
            </div>
        </div>
</div>
 

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
