@model IEnumerable<Proyecto_Facultad.Models.AsistenciaAlumno>

<div class="container-fluid pt-4">
    <div class="row mb-3">
        <div class="col-6">
            <h2 class="text-primary">Asistencia de Alumnos</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Añadir Nueva Asistencia
            </a>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Nombre Alumno</th>
                    <th>Asistencia</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdAlumnoNavigation.NombreCompleto</td>
                        <td>@item.Ausencia</td>
                        <td>
                            <div class="btn-group w-100" role="group">
                                <a asp-action="Edit" asp-route-id="@item.IdAsistenciaAlumno" class="btn btn-primary flex-grow-1">
                                    <i class="bi bi-pencil-fill"></i> Editar
                                </a>
                               @*  <!-- Puedes agregar un botón para eliminar si es necesario -->
                                <form asp-action="Delete" asp-route-id="@item.IdAsistenciaAlumno" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-danger flex-grow-1" onclick="return confirm('¿Estás seguro de que deseas eliminar esta asistencia?');">
                                        <i class="bi bi-trash-fill"></i> Eliminar
                                    </button>
                                </form> *@
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>







