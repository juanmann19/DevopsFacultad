@model IEnumerable<Proyecto_Facultad.Models.AsistenciaAlumno>

<div class="container-fluid pt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

    <div class="row mb-3">
        <div class="col-6">
            <h2 class="text-primary">Asistencias de Alumnos</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Agregar asistencia
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Maestro</th>
                    <th>Alumno</th>
                    <th>Asistencia</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(item.IdAlumnoNavigation != null ? item.IdAlumnoNavigation.PrimerNombreAlumno : "No disponible")</td>
                        <td>@(item.IdAsistenciaStaffNavigation != null ? item.IdAsistenciaStaffNavigation.IdStaff.ToString() : "No disponible")</td>
                        <td>@item.Ausencia</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</div>
