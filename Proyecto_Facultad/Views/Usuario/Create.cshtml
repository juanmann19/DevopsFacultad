@model Proyecto_Facultad.Models.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="container">
    <h2 class="text-primary">Crear Usuario</h2>
    <form id="usuarioForm" asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="NombreUsuario" class="control-label"></label>
            <input asp-for="NombreUsuario" class="form-control" />
            <span asp-validation-for="NombreUsuario" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ContrasenaUsuario" class="control-label"></label>
            <input asp-for="ContrasenaUsuario" type="password" class="form-control" />
            <span asp-validation-for="ContrasenaUsuario" class="text-danger"></span>
        </div>
        <div class="form-group" style="padding-bottom: 2%;">
            <label asp-for="IdRol" class="control-label"></label>
            <select asp-for="IdRol" class="form-control" asp-items="ViewBag.Roles"></select>
            <span asp-validation-for="IdRol" class="text-danger"></span>
        </div>
        <div class="text-center" style="width: 100%;">
            <div class="form-group d-flex"
                style="width: 40%; justify-content: center; align-items: center; display: flex;">
                <button type="submit" class="btn btn-primary flex-fill me-2">Guardar</button>
                <a asp-action="Index" asp-controller="Usuario" class="btn btn-danger flex-fill">Cancelar</a>
            </div>

        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
