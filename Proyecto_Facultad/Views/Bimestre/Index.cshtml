@model List<Bimestre>

<div class="container-fluid pt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
    <div class="row mb-3">
        <div class="col-6">
            <h2 class="text-primary">Listado Bimestres</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Bimestre" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Agregar Bimestre
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>

                    <!-- Trae solo los campos necesarios, no todos-->
                    <th>Nombre Bimestre</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.NombreBimestre))
                {
                    <tr>
                        <td>@obj.NombreBimestre</td>
                        <td>
                            <div class="btn-group w-100" role="group" style="justify-content: center; align-items: center; display: flex;">
                                <div style="padding-right: 2%;">
                                    <a asp-controller="Bimestre" asp-action="Edit" asp-route-id="@obj.IdBimestre"
                                        class="btn btn-warning flex-grow-1">
                                        <i class="bi bi-pencil-fill"></i> Editar
                                    </a>
                                </div>
                                <div>

                                    <a asp-controller="Bimestre" asp-action="Delete" asp-route-id="@obj.IdBimestre"
                                        class="btn btn-danger flex-grow-1">
                                        <i class="bi bi-trash-fill"></i> Eliminar
                                    </a>
                                </div>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
