@model Proyecto_Facultad.Models.AsistenciaStaff

<div class="container">
    <h2 class="text-primary">Añadir Asistencia</h2>

    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="control-label">Nombre Maestro</label>
                <!-- Campo de solo lectura con el nombre del maestro -->
                <input type="text" class="form-control" value="@ViewData["NombreMaestro"]" readonly />

            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="FechaClase" class="form-label">Fecha de Clase</label>
                <input asp-for="FechaClase" class="form-control" type="date" />
                <span asp-validation-for="FechaClase" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="IdMesa" class="form-label">Mesa</label>
                <!-- Mostrar solo las mesas asignadas al maestro -->
                <select asp-for="IdMesa" class="form-control" asp-items="ViewBag.IdMesa"></select>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="IdLeccion" class="form-label">Lección</label>
                <select asp-for="IdLeccion" class="form-control" asp-items="ViewBag.IdLeccion"></select>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="IdBimestre" class="form-label">Bimestre</label>
                <select asp-for="IdBimestre" class="form-control" asp-items="ViewBag.IdBimestre"></select>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="from-group">
                    <label asp-for="Ausencia" class="form-label">Asistencia</label>
                    <select asp-for="Ausencia" class="form-control">
                        <option value ="">Seleccione</option>
                        <option value="Asistió">Asistió</option>
                        <option value="Enfermedad">Enfermedad</option>
                        <option value="Bautizo">Bautizo</option>
                        <option value="Examen">Examen</option>
                        <option value="Inasistencia">Inasistencia</option>
                        <option value="Justificación">Justificación</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="form-group d-flex">
            <button type="submit" class="btn btn-primary flex-fill me-2">Guardar</button>
            <a asp-action="Index" class="btn btn-danger flex-fill me-2">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

