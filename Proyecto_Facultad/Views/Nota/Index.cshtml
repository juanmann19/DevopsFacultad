@model List<Nota>

<div class="container-fluid pt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
    <div class="row mb-3">
        <div class="col-6">
            <h2 class="text-primary">Listado de alumnos asignados a mi mesa</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Notas" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Ingresar nueva nota
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>

                    <!-- Trae solo los campos necesarios, no todos-->
                    <th>Alumno</th>
                    <th>Bimestre</th>
                    <th>Nota</th>
                </tr>
            </thead>
            <tbody>
              
                @foreach (var obj in Model.OrderBy(u => u.IdNota))
                {
                    <tr>
                        <td>@obj.IdAsignacionalumnosNavigation?.IdAlumnoNavigation.PrimerNombreAlumno</td>
                        <td>@obj.IdBimestreNavigation?.NombreBimestre </td>
                        <td>@obj.NotaObtenida </td>
                        <td>
                            <div class="btn-group w-100" role="group">
                                <a asp-controller="Capacitacion" asp-action="Edit" asp-route-id="@obj.IdNota" class="btn btn-primary flex-grow-1">
                                    <i class="bi bi-pencil-fill"></i> Editar
                                </a>
                            </div>

                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>