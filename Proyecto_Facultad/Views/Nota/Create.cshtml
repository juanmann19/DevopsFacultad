@model Proyecto_Facultad.Models.Nota

<div class="container">
    <h2 class="text-primary">Asignar nota a un alumno </h2>

    <form id="sedeForm" asp-action="Create" method="post">
        <div class="row mb-3">
            
            <div class="col-md-6">
                <label asp-for="IdAsignacionalumnos" class="form-label"></label>
                <select asp-for="IdAsignacionalumnos" class="form-control" asp-items="ViewBag.IdAlumno">
                </select>
            </div>
            <div class="col-md-6">
                <label asp-for="IdBimestre" class="form-label"></label>
                <select asp-for="IdBimestre" class="form-control" asp-items="ViewBag.IdBimestre">
                </select>
            </div>
            <div class="col-md-6">
                <label asp-for="NotaObtenida" class="form-label"></label>
                <input asp-for="NotaObtenida" class="form-control" type="number" min="0" max="100" />
                <span asp-validation-for="NotaObtenida" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group d-flex">
            <button type="submit" class="btn btn-primary flex-fill me-2">Guardar</button>
            <a asp-action="Index" class="btn btn-danger flex-fill">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelector('form').addEventListener('submit', function (event)
    </script>
}
